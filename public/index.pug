html(lang="no")
    head 
        meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no, viewport-fit=cover")
        style.
            body, html {
                height: 100vh;
                margin: 0;
                width: 100wv;
                overflow: hidden; 
                padding: 0; 
                touch-action: none; 
                background-image: linear-gradient(rgba(255,255, 255, 0), rgba(255, 255, 255, .9));
                background-color: #C2C1C2;
                transition: background-color 2.5s;
                color: #FFF;
            }

            canvas {
                width: 100vw !important;  
                height: 100vh !important;
                position: relative;
                z-index: 2;
            }

            .background {
                position: fixed;
                width: 100%;
                height: 100%;
                opacity: .15;
                z-index: 1;
                transition: background-color 1s;
            }
            
            .ui {
                position: relative;
                z-index: 3; 
            }

            .ready,
            .ended { 
                position: fixed;
                z-index: 3;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }

            .running { 
                position: fixed;
                top: 1em;
                right: 1em; 
            }

            .ui-section {
                display: none;
            }

            .ui-section.ui-section--active {
                display: block;
            }

            .title {
                font-size: 15vw;
            }

            .score {
                font-size: 2em;
            }
 
        title Stacky
    body 
        .ui 
            .ui-section.ui-section--active.ready
                h1.title Stacky
                button.click-to-start Click to start
            .ui-section.ended
                .score
                p.status Game over!
                button.click-to-start Click to restart
            .ui-section.running 
                .score
        .background


        script(src=cacheBuster("app.js"))